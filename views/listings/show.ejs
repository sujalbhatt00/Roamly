<% layout("/layouts/boilerplate") %>

<div class="row mt-4 mb-4">
  <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
    <div class="card shadow show-card border-0" style="border-radius:22px;overflow:hidden;">
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing image" style="height:340px;object-fit:cover;">
      <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="badge bg-light text-dark border px-2 py-1" style="font-size:1rem;">
            <i class="fa-solid fa-location-dot me-1"></i> <%= listing.location %>
          </span>
          <span class="badge bg-danger text-white px-2 py-1" style="font-size:1.1rem;">
            ₹<%= listing.price ? listing.price.toLocaleString("en-in") : "N/A" %>
          </span>
        </div>
        <h2 class="card-title mb-2" style="font-weight:700;font-size:2rem;"><%= listing.title %></h2>
        <div class="mb-3">
          <span class="badge bg-secondary px-2 py-1" style="font-size:1rem;">
            <i class="fa-solid fa-flag me-1"></i> <%= listing.country %>
          </span>
        </div>
        <p class="card-text mb-3" style="font-size:1.1rem;line-height:1.6;"><%= listing.description %></p>
        <div class="d-flex gap-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn px-4">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=delete" class="d-inline">
            <button class="btn btn-outline-danger px-4">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="col-8 offset-2 mb-3">
  <hr>
  <h4>Leave a Review</h4>
  <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
    <div class="mb-3 mt-3">
      <label for="name" class="form-label">Your Name</label>
      <input type="text" class="form-control" id="name" name="review[author][name]" required>
      <div class="invalid-feedback">Please enter your name</div>
    </div>
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <div class="star-rating">
        <input type="radio" name="review[rating]" value="5" id="star5" required>
        <label for="star5" class="star">★</label>
        <input type="radio" name="review[rating]" value="4" id="star4">
        <label for="star4" class="star">★</label>
        <input type="radio" name="review[rating]" value="3" id="star3">
        <label for="star3" class="star">★</label>
        <input type="radio" name="review[rating]" value="2" id="star2">
        <label for="star2" class="star">★</label>
        <input type="radio" name="review[rating]" value="1" id="star1">
        <label for="star1" class="star">★</label>
      </div>
      <div class="invalid-feedback">Please select a rating</div>
    </div>
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea class="form-control" name="review[comment]" id="comment" cols="15" rows="4" required></textarea>
      <div class="invalid-feedback">Please enter your comments</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>

  <div>
    <hr>
    <h4>All Reviews</h4>
    <% if (listing.reviews && listing.reviews.length > 0) { %>
      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="col-12 mb-3">
            <div class="card">
              <div class="card-body">
                <div class="d-flex align-items-start mb-3">
                  <img src="<%= review.author && review.author.profilePic ? review.author.profilePic : 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png' %>"
                    alt="Profile Picture"
                    class="rounded-circle me-3"
                    style="width: 50px; height: 50px; object-fit: cover;">
                  <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <div>
                        <h6 class="mb-1 fw-bold"><%= review.author && review.author.name ? review.author.name : 'Anonymous' %></h6>
                        <div class="text-warning mb-1">
                          <% for (let i = 1; i <= 5; i++) { %>
                            <% if (i <= review.rating) { %>
                              <i class="fas fa-star"></i>
                            <% } else { %>
                              <i class="far fa-star"></i>
                            <% } %>
                          <% } %>
                          <span class="ms-2 text-muted">(<%= review.rating %>/5)</span>
                        </div>
                      </div>
                      <small class="text-muted"><%= new Date(review.createdAt).toLocaleDateString() %></small>
                    </div>
                    <p class="card-text mb-2"><%= review.comment %></p>
                    
                    <!-- CLEAN DELETE FORM -->
                    <form method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this review?')">
                        Delete Review
                      </button>
                    </form>
                    
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <p class="text-muted">No reviews yet. Be the first to leave a review!</p>
    <% } %>
  </div>
</div>