<% layout("/layouts/boilerplate") %>
<h2 class="mb-4 mt-3" style="font-weight:600;font-size:1.8rem;color:#222;">All Listings</h2>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3 listings-grid">

  <% for(let listing of allListing){ %>
    <div class="col">
      <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="listing-card">
          <div class="img-ratio-box">
            <img 
          src="<%=  listing.image.url  %>"
              class="card-img-top uniform-img" 
              alt="<%=listing.title%>"
              onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1568605114967-8130f3a36994?w=800&h=600&fit=crop';">
          </div>
          
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-1">
              <span class="badge bg-light text-dark border">
                <i class="fa-solid fa-location-dot me-1"></i><%=listing.location%>, <%=listing.country%>
              </span>
            </div>
            
            <h5 class="card-title"><%=listing.title%></h5>
            
            <p class="mb-0">
              <span class="badge bg-danger text-white">
                â‚¹<%= listing.price ? listing.price.toLocaleString("en-in") : "N/A" %>
              </span> /night
            </p>
            <div class="mt-2">
              <form method="POST" action="/bookings/create-checkout-session/<%=listing._id%>">
                <button type="submit" class="btn btn-sm book-btn-sm">Book Now</button>
              </form>
            </div>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>