
<% layout("/layouts/boilerplate") %>
<h2 class="mb-4 mt-3" style="font-weight:700;font-size:2.2rem;">All Listings</h2>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% for(let listing of allListing){ %>
    <div class="col d-flex align-items-stretch">
      <div class="card listing-card shadow-sm border-0 mb-4" style="border-radius:22px;overflow:hidden;">
        <a href="/listings/<%=listing._id%>" class="listing-link">
          <div class="img-ratio-box">
            <img src="<%=listing.image%>" class="card-img-top uniform-img" alt="Listing image">
          </div>
        </a>
        <div class="card-body p-3">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="badge bg-light text-dark border px-2 py-1" style="font-size:0.95rem;"><i class="fa-solid fa-location-dot me-1"></i> <%=listing.location%></span>
            <span class="badge bg-danger text-white px-2 py-1" style="font-size:1rem;">â‚¹<%= listing.price ? listing.price.toLocaleString("en-in") : "N/A" %> / night</span>
          </div>
          <h5 class="card-title mb-1" style="font-weight:600;font-size:1.2rem;"><%=listing.title%></h5>
          <div class="d-flex justify-content-between align-items-center">
            <span class="badge bg-secondary px-2 py-1" style="font-size:0.95rem;"><i class="fa-solid fa-flag me-1"></i> <%=listing.country%></span>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>
  