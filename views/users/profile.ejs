<% layout("/layouts/boilerplate") %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

    /* --- Design System Variables --- */
    :root {
        --primary-color: #E54D42; /* Main brand color (Roamly Red) */
        --primary-rgb: 229, 77, 66;
        --dark-color: #1a1a1a; /* Darker black for text contrast */
        --text-color: #343a40; /* Dark gray for main text */
        --text-muted: #6c757d;
        --border-color: #f1f3f5; /* Lighter border color for separation */
        --bg-light: #f8f9fa; /* Page background */
        --shadow-sm: 0 4px 12px rgba(0,0,0,0.08); /* Slightly richer shadow */
        --border-radius-sm: 8px;
        --border-radius: 20px; /* Modern, large radius */
    }

    /* === General Body & Container === */
    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
        color: var(--text-color);
        line-height: 1.6;
        padding: 1rem 0; /* Optimized for full width on mobile */
    }

    .profile-card {
        max-width: 500px;
        margin: 0 1rem; /* Added horizontal margin for safety on small devices */
        background: #fff;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        animation: fadeIn 0.5s ease-out;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    /* Ensure the card takes full width on extra small screens */
    @media (max-width: 520px) {
        .profile-card {
            margin: 0 0.75rem;
            border-radius: 0; /* Optional: Make full width without border radius for a native app feel */
        }
        body {
            padding: 0;
        }
    }


    /* === 1. Profile Header (Avatar, Name, Email) === */
    .profile-header {
        text-align: center;
        padding: 2rem 1rem 1.5rem; /* Reduced vertical padding */
        background-color: #fff;
        border-bottom: 1px solid var(--border-color);
    }

    .profile-avatar {
        width: 90px; /* Slightly smaller for mobile compactness */
        height: 90px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 0.75rem;
        border: 3px solid var(--primary-color);
        box-shadow: 0 0 0 4px rgba(var(--primary-rgb), 0.2);
    }

    .profile-header h3 {
        font-weight: 700;
        font-size: 1.5rem; /* Adjusted font size for mobile */
        color: var(--dark-color);
        margin-bottom: 0.25rem;
    }

    .profile-header .email {
        font-size: 0.9rem; /* Slightly smaller email text */
        color: var(--text-muted);
    }

    /* === 2. Reusable Section Styling === */
    .profile-section {
        padding: 1.5rem 1.25rem; /* Reduced padding for mobile */
        border-bottom: 1px solid var(--border-color);
    }
    .profile-card > .profile-section:last-of-type {
        border-bottom: none;
    }

    .profile-section h5 {
        font-weight: 600;
        font-size: 1.05rem;
        color: var(--dark-color);
        margin-bottom: 0.75rem; /* Reduced margin */
    }

    /* === 3. Details List (Modernized) === */
    .details-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .details-list li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.95rem; /* Reduced list item font size */
        padding: 0.6rem 0; /* Reduced list item padding */
        border-bottom: 1px solid var(--border-color);
    }
    .details-list li:last-child {
        border-bottom: none;
    }

    .details-list li span {
        color: var(--text-muted);
        font-size: 0.9rem;
        min-width: 40%; /* Ensure the label has space */
    }
    .details-list li strong {
        color: var(--dark-color);
        font-weight: 500;
        text-align: right;
        max-width: 60%; /* Allow data to take more space */
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* === 4. Actions (Buttons) - Mobile-First Flex === */
    .profile-actions {
        display: flex;
        flex-direction: column; /* Stack vertically by default (mobile-first) */
        gap: 0.75rem;
    }
    
    .profile-actions form {
        display: contents;
    }
    
    @media (min-width: 450px) {
        .profile-actions {
            flex-direction: row; /* Layout horizontally on wider screens */
            justify-content: space-between;
        }
        .profile-actions .btn {
            flex-grow: 1;
            max-width: calc(33% - 8px);
        }
    }


    /* --- Button Styles --- */
    .btn {
        display: block;
        padding: 0.8rem 1rem; /* Slightly taller buttons for easier mobile tapping */
        border-radius: var(--border-radius-sm);
        text-decoration: none;
        font-weight: 600;
        border: 1px solid transparent;
        cursor: pointer;
        transition: all 0.2s ease;
        text-align: center;
        font-size: 0.95rem; /* Slightly larger font size for buttons */
    }
    .btn:active {
        transform: scale(0.98);
    }

    /* Primary Outline Button */
    .btn-primary-outline {
        border-color: var(--primary-color);
        color: var(--primary-color);
        background: #fff;
    }
    .btn-primary-outline:hover {
        background-color: var(--primary-color);
        color: #fff;
    }

    /* Danger Outline Button */
    .btn-danger-outline {
        border-color: #dc3545;
        color: #dc3545;
        background: #fff;
    }
    .btn-danger-outline:hover {
        background-color: #dc3545;
        color: #fff;
    }
    
    /* === 5. Logout Link === */
    .logout-section {
        padding: 1.25rem 1.25rem; /* Reduced padding */
        border-top: none;
        background-color: var(--bg-light);
        text-align: center;
        border-bottom-left-radius: var(--border-radius);
        border-bottom-right-radius: var(--border-radius);
    }
    .logout-link {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem; /* Consistent smaller size */
        transition: color 0.2s ease, text-decoration 0.2s ease;
    }
    .logout-link:hover {
        color: #b03a31;
        text-decoration: underline;
    }
</style>

<div class="profile-card">
    <div class="profile-header">
        <img src="<%= user.avatar || 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png' %>" class="profile-avatar" alt="User Avatar">
        <h3 class="mb-1"><%= user.username %></h3>
        <p class="email mb-0"><%= user.email %></p>
    </div>
    
    <div class="profile-section">
        <h5>Account Details</h5>
        <ul class="details-list">
            <li>
                <span>Username</span>
                <strong><%= user.username %></strong>
            </li>
            <li>
                <span>Email</span>
                <strong><%= user.email %></strong>
            </li>
            <li>
                <span>Joined</span>
                <strong><%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : "N/A" %></strong>
            </li>
        </ul>
    </div>

    <div class="profile-section profile-actions">
        <a href="/bookings/my-bookings" class="btn btn-primary-outline">My Bookings</a>
        <a href="/profile/edit" class="btn btn-primary-outline">Edit Profile</a>
        <a href="/profile/delete" class="btn btn-danger-outline">Delete Profile</a>
    </div>

    <div class="logout-section">
        <a href="/logout" class="logout-link">Log Out</a>
    </div>

</div>
