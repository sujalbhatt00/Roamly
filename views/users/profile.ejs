<% layout("/layouts/boilerplate") %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  :root {
    --primary-color: #E54D42; /* Main brand color */
    --primary-rgb: 229, 77, 66;
    --dark-color: #222222;
    --text-color: #333;
    --text-muted: #6c757d;
    --border-color: #eee;
    --bg-light: #f8f9fa;
    --shadow-sm: 0 2px 4px rgba(0,0,0,0.06);
    --shadow-md: 0 5px 15px rgba(0,0,0,0.1);
    --border-radius-sm: 8px;
    --border-radius: 16px; /* A slightly softer, modern radius */
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--bg-light); /* Page background */
    color: var(--text-color);
    line-height: 1.6;
    padding: 2rem 1rem; /* Add padding for mobile */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .profile-card {
    max-width: 550px;
    margin: 0 auto; /* Centered */
    background: #fff;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    overflow: hidden; /* To contain borders */
  }

  /* 1. Profile Header (Avatar, Name, Email) */
  .profile-header {
    text-align: center;
    padding: 2.5rem 2rem;
  }

  .profile-avatar {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 50%;
    margin-bottom: 1rem;
    border: 4px solid #fff; /* White border to lift it */
    box-shadow: 0 0 0 1px var(--border-color), var(--shadow-sm); /* Subtle shadow */
  }

  .profile-header h3 {
    font-weight: 700;
    font-size: 1.75rem;
    color: var(--dark-color);
    margin-bottom: 0.25rem;
  }

  .profile-header .email {
    font-size: 1rem;
    color: var(--text-muted);
    margin-bottom: 0;
  }

  /* 2. Reusable Section Styling */
  .profile-section {
    padding: 2rem 2.5rem;
    border-top: 1px solid var(--border-color);
  }

  .profile-section h5 {
    font-weight: 600;
    font-size: 1.2rem;
    color: var(--dark-color);
    margin-bottom: 1.5rem;
  }

  /* 3. Details List */
  .details-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .details-list li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid #f9f9f9;
  }
  .details-list li:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }
  .details-list li span {
    color: var(--text-muted);
  }
  .details-list li strong {
    color: var(--dark-color);
    font-weight: 600;
  }

  /* 4. Actions (Buttons) */
  .profile-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem; /* Modern spacing */
  }
  
  .profile-actions form {
    display: contents; /* Makes form play nice with flexbox */
  }

  /* --- Base Button Styles --- */
  .btn {
    display: inline-block;
    padding: 10px 20px;
    border-radius: var(--border-radius-sm);
    text-decoration: none;
    font-weight: 600;
    border: 1px solid transparent;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
    font-size: 0.95rem;
  }
  .btn:active {
    transform: scale(0.98);
  }

  /* Primary Outline Button */
  .btn-primary-outline {
    border-color: var(--primary-color);
    color: var(--primary-color);
    background: #fff;
  }
  .btn-primary-outline:hover {
    background-color: var(--primary-color);
    color: #fff;
  }

  /* Danger Outline Button */
  .btn-danger-outline {
    border-color: #dc3545;
    color: #dc3545;
    background: #fff;
  }
  .btn-danger-outline:hover {
    background-color: #dc3545;
    color: #fff;
  }
  
  /* Media Query for smaller screens */
  @media (max-width: 600px) {
    .profile-card {
      padding: 0;
    }
    .profile-header {
      padding: 2rem 1.5rem;
    }
    .profile-section {
      padding: 1.5rem;
    }
  }
</style>

<div class="profile-card">
  <div class="profile-header">
    <img src="<%= user.avatar || 'https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png' %>" class="profile-avatar" alt="Avatar">
    <h3 class="mb-1"><%= user.username %></h3>
    <p class="email mb-0"><%= user.email %></p>
  </div>
  
  <div class="profile-section">
    <h5>Account Details</h5>
    <ul class="details-list">
      <li>
        <span>Username</span>
        <strong><%= user.username %></strong>
      </li>
      <li>
        <span>Email</span>
        <strong><%= user.email %></strong>
      </li>
      <li>
        <span>Joined</span>
        <strong><%= user.createdAt ? new Date(user.createdAt).toLocaleDateString() : "N/A" %></strong>
      </li>
    </ul>
  </div>

  <div class="profile-section profile-actions">
    <a href="/bookings/my-bookings" class="btn btn-primary-outline">My Bookings</a>
    <a href="/profile/edit" class="btn btn-primary-outline">Edit Profile</a>
    <a href="/profile/delete" class="btn btn-danger-outline">Delete Profile</a>
  </div>
</div>