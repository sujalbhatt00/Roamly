<% layout("/layouts/boilerplate") %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

  :root {
    --primary-color: #fe424d;
    --primary-rgb: 254, 66, 77;
    --dark-color: #1d1d1f;
    --text-color: #333;
    --text-muted: #6c757d;
    --bg-light: #f7f8fa;
    --border-color: #eaeaea;
    --success-color: #28a745;
    --danger-color: #dc3545;
    --warning-color: #ffc107;
    --shadow-sm: 0 2px 8px rgba(0,0,0,0.06);
    --shadow-md: 0 8px 20px rgba(0,0,0,0.08);
    --radius: 14px;
  }

  body {
    font-family: 'Inter', sans-serif;
    background: linear-gradient(135deg, #fafafa, #f3f3f3);
    color: var(--text-color);
    line-height: 1.6;
  }

  .bookings-container {
    max-width: 1150px;
    margin: 0 auto;
    padding: 3rem 1rem 4rem;
  }

  .bookings-header {
    font-size: 2.4rem;
    font-weight: 700;
    color: var(--dark-color);
    text-align: center;
    margin-bottom: 2.8rem;
    position: relative;
  }

  .bookings-header::after {
    content: "";
    display: block;
    width: 70px;
    height: 4px;
    background: var(--primary-color);
    margin: 0.5rem auto 0;
    border-radius: 5px;
  }

  /* --- Grid Layout --- */
  .bookings-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.75rem;
  }

  /* --- Booking Card --- */
  .booking-card {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(16px);
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    transition: all 0.25s ease;
    position: relative;
    display: flex;
    flex-direction: column;
    animation: fadeInUp 0.5s ease-in-out;
  }

  .booking-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .booking-img {
    width: 100%;
    height: 220px;
    object-fit: cover;
  }

  .booking-body {
    padding: 1.25rem 1.4rem 1.4rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .booking-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--dark-color);
    text-decoration: none;
    position: relative;
  }
  .booking-title:hover {
    text-decoration: underline;
  }

  .booking-info {
    font-size: 0.95rem;
    color: var(--text-muted);
    margin-bottom: 0.4rem;
  }
  .booking-info strong {
    color: var(--dark-color);
    font-weight: 600;
  }

  /* --- Status Badge --- */
  .booking-status {
    position: absolute;
    top: 1rem;
    left: 1rem;
    padding: 0.35rem 0.75rem;
    font-weight: 600;
    border-radius: 30px;
    font-size: 0.8rem;
    color: white;
    letter-spacing: 0.3px;
    text-transform: uppercase;
    z-index: 10; /* Ensures status is on top of image */
  }
  .status-confirmed { background: var(--success-color); }
  .status-cancelled { background: var(--danger-color); }
  .status-pending { background: var(--warning-color); color: #111; }

  /* --- Footer --- */
  .booking-footer {
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
  }

  .delete-booking-btn {
    background: transparent;
    color: var(--danger-color);
    border: 1px solid var(--danger-color);
    border-radius: 8px;
    padding: 0.5rem 1rem;
    font-size: 0.9rem;
    font-weight: 600;
    transition: all 0.25s ease;
    cursor: pointer;
  }
  .delete-booking-btn:hover {
    background: var(--danger-color);
    color: #fff;
    transform: translateY(-2px);
  }
  .delete-booking-btn i {
    margin-right: 0.4em;
  }

  /* --- Empty State --- */
  .empty-state {
    background: #fff;
    border-radius: var(--radius);
    box-shadow: var(--shadow-sm);
    text-align: center;
    padding: 3.5rem 2rem;
    animation: fadeInUp 0.6s ease;
  }
  .empty-state h5 {
    font-size: 1.6rem;
    font-weight: 700;
    color: var(--dark-color);
  }
  .empty-state p {
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }
  .btn {
    display: inline-block;
    padding: 10px 22px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }
  .btn-primary {
    background: linear-gradient(90deg, #fe424d, #ff6b6b);
    color: #fff;
    border: none;
  }
  .btn-primary:hover {
    background: linear-gradient(90deg, #ff6b6b, #fe424d);
    box-shadow: 0 6px 15px rgba(254, 66, 77, 0.3);
    transform: translateY(-2px);
  }

  /* --- Responsive --- */
  @media (max-width: 576px) {
    .bookings-header {
      font-size: 1.9rem;
    }
    .booking-img {
      height: 180px;
    }
    .booking-card {
      border-radius: 10px;
    }
  }
</style>

<div class="container bookings-container">
  <h2 class="bookings-header">My Bookings</h2>

  <% if (bookings.length === 0) { %>
    <div class="empty-state">
      <h5>You have no bookings yet</h5>
      <p>When you book a stay, your reservations will appear here.</p>
      <a href="/" class="btn btn-primary">Start Exploring</a>
    </div>
  <% } else { %>
    <div class="bookings-grid">
      <% bookings.forEach(booking => { %>
        <div class="booking-card">

          <span class="booking-status 
            <%= booking.status.toLowerCase() === 'confirmed' ? 'status-confirmed' : 
                booking.status.toLowerCase() === 'cancelled' ? 'status-cancelled' : 
                'status-pending' %>">
            <%= booking.status %>
          </span>

          <% if (booking.listing) { %>
            <% const imgUrl = booking.listing.image?.url || 'https://images.unsplash.com/photo-1568605114967-8130f3a36994?w=800&h=600&fit=crop'; %>
            <img src="<%= imgUrl %>" alt="<%= booking.listing.title %>" class="booking-img">

            <div class="booking-body">
              <a href="/listings/<%= booking.listing._id %>" class="booking-title"><%= booking.listing.title %></a>
          
          <% } else { %>
            <img src="https://images.unsplash.com/photo-1568605114967-8130f3a36994?w=800&h=600&fit=crop" alt="Listing no longer available" class="booking-img">
            
            <div class="booking-body">
              <a href="#" class="booking-title" style="color: var(--text-muted); text-decoration: none; cursor: default;">
                Listing no longer available
              </a>
          <% } %>
          <p class="booking-info">
              <strong>From:</strong> <%= new Date(booking.startDate).toLocaleDateString() %><br>
              <strong>To:</strong> <%= new Date(booking.endDate).toLocaleDateString() %>
            </p>
            <p class="booking-info mb-2">
              <strong>Total Price:</strong> â‚¹<%= booking.totalPrice.toLocaleString("en-IN") %>
            </p>

            <div class="booking-footer">
              <form method="POST" action="/bookings/delete/<%= booking._id %>" 
                    onsubmit="return confirm('Are you sure you want to delete this booking?');">
                <button type="submit" class="delete-booking-btn">
                  <i class="fa-regular fa-trash-can"></i> Delete Booking
                </button>
              </form>
            </div>

          </div> </div> <% }) %>
    </div>
  <% } %>
</div>
